<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_gray"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="8dip">

        <TextView
            android:id="@+id/recommend_synopsis_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/ic_clip_view_num"/>

            <TextView
                android:id="@+id/recommend_synopsis_tv_play_count"
                android:layout_width="40dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/c_999999"
                android:textSize="12dip"/>

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="8dip"
                android:src="@drawable/ic_clip_danmaku_num"/>

            <TextView
                android:id="@+id/recommend_synopsis_tv_danmaku_count"
                android:layout_width="40dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/c_999999"
                android:textSize="12dip"/>
        </LinearLayout>

        <TextView
            android:id="@+id/recommend_synopsis_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:textColor="@color/c_999999"
            android:textSize="12dip"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="8dip"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/recommend_layout_share"
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_weight="1"
                android:background="@drawable/bg_black20_selector"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:src="@drawable/ic_share_green"/>

                <TextView
                    android:id="@+id/recommend_tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:text="0"
                    android:textColor="#46C235"
                    android:textSize="12dip"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recommend_layout_coin"
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_weight="1"
                android:background="@drawable/bg_black20_selector"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:src="@drawable/ic_coin"/>

                <TextView
                    android:id="@+id/recommend_tv_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:text="0"
                    android:textColor="#FFA726"
                    android:textSize="12dip"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recommend_layout_collect"
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_weight="1"
                android:background="@drawable/bg_black20_selector"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:src="@drawable/ic_collect"/>

                <TextView
                    android:id="@+id/recommend_tv_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:text="0"
                    android:textColor="#FF84A7"
                    android:textSize="12dip"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recommend_layout_download"
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_weight="1"
                android:background="@drawable/bg_black20_selector"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:src="@drawable/ic_download"/>

                <TextView
                    android:id="@+id/recommend_tv_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:text="缓存"
                    android:textColor="#3CA6FF"
                    android:textSize="12dip"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="8dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.don.bilibili.view.CircularImageView
                android:id="@+id/recommend_iv_head"
                android:layout_width="40dip"
                android:layout_height="40dip">
            </com.don.bilibili.view.CircularImageView>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recommend_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dip"/>

                <TextView
                    android:id="@+id/recommend_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:textColor="@color/c_999999"
                    android:textSize="12dip"/>
            </LinearLayout>

            <TextView
                android:id="@+id/recommend_tv_follow"
                android:layout_width="60dip"
                android:layout_height="30dip"
                android:background="@drawable/bg_white_pink_line"
                android:gravity="center"
                android:text="关注"
                android:textColor="@color/pink"
                android:textSize="12dip"/>

            <TextView
                android:id="@+id/recommend_tv_charge"
                android:layout_width="60dip"
                android:layout_height="30dip"
                android:layout_marginLeft="8dip"
                android:background="@drawable/bg_pink"
                android:gravity="center"
                android:text="充电"
                android:textColor="@color/white"
                android:textSize="12dip"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="8dip"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/recommend_layout_tag"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recommend_layout_tag_arrow"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:src="@drawable/tag_center_arrow_down"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>