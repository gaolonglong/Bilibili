<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical" >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/live_danmaku_lv_display"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:overScrollMode="never" />

    <LinearLayout
        android:id="@+id/live_danmaku_layout_gift"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:background="@drawable/bg_black20_selector"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:src="@drawable/ic_live_player_send_gift" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/live_danmaku_et_content"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="4dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:paddingTop="4dip" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="输入想发的弹幕"
                android:padding="4dip"
                android:textColor="@color/c_999999"
                android:textColorHint="@color/c_999999"
                android:textSize="12dip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/c_999999" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/live_danmaku_layout_send"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:background="@drawable/bg_black20_selector"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="22dip"
                android:layout_height="22dip"
                android:src="@drawable/ic_send_grey" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>