<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/listitem_home_episode_layout_cover"
        android:layout_width="match_parent"
        android:layout_height="130dip" >

        <ImageView
            android:id="@+id/listitem_home_episode_iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_home_episode_shadow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white20_selector" >
        </View>

        <TextView
            android:id="@+id/listitem_home_episode_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:padding="4dip"
            android:textColor="@color/white"
            android:textSize="12dip" />
    </RelativeLayout>

    <TextView
        android:id="@+id/listitem_home_episode_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:paddingTop="4dip"
        android:textColor="@color/black"
        android:textSize="12dip" />

    <TextView
        android:id="@+id/listitem_home_episode_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dip"
        android:textColor="@color/c_999999"
        android:textSize="12dip" />

</LinearLayout>